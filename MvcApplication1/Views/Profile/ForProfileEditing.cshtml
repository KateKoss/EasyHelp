@model MvcApplication1.Models.ProfileModel

@{
    ViewBag.Title = "Профіль";
}

<h2>Редагування</h2>

@using (Html.BeginForm("AddTeg", "Profile", FormMethod.Post))
{
    <h3>Теги</h3>
    <p>
        @Html.LabelFor(model => model.MyTegs, Model.MyTegs != null ? Model.MyTegs : "")
    </p>
    <p>
        @Html.DropDownListFor(model => model.SelectedTeg, Model.TegList, new { size = 1 })
        @Html.ValidationMessageFor(model => model.SelectedTeg)

        <button type="submit" class="btn btn-default">-></button>
        
    </p>
}
   
<div>
    @using (Html.BeginForm("Index", "Profile", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>ProfileModel</legend>
            <p><h3>Ім'я</h3>
                @Html.TextBoxFor(model => model.Name, new { @placeholder = "Ім'я" })            
            </p>
            @*<div class="@((Model.flag_about_me)?"visible-item":"hidden-item")">Some links</div>*@     
            <p><h3>Про мене</h3>
                @Html.TextAreaFor(model => model.About_me, new { @placeholder = "Про мене" })
            
            </p>
            <p>
                <button>Зберегти зміни</button>
            </p>
        </fieldset>
    }

</div>

<div>
    @Html.ActionLink("Назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}