    </ul>
</nav>
<div>
    @using (Html.BeginForm("UploadPhoto", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <fieldset>
            
            
            @if (Model.UserPhoto != null) { 
            @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                + Convert.ToBase64String(Model.UserPhoto) + "\" />")
            }
            @if (Model.UserPhoto == null) { 
                <img src='Images/userphoto2.jpg' alt="фото" /><br />
            }
            <input type="file" name="upload" /><br>
            <input type="submit" value="Завантажити" />
            @*@Html.DisplayFor(m => m.UserPhoto, Model.UserPhoto)*@
            
            @*<img src="@Server.MapPath("/Images/short.jpg")" alt="фото" />*@

            @*@Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                + ((Model.UserPhoto!=null)?Convert.ToBase64String(Model.UserPhoto):"q") + "\" />")*@
        </fieldset>
    }
    @using (Html.BeginForm("Index", "Profile", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        

        <fieldset>
            <legend>ProfileModel</legend>
            
            <p>
                @Html.LabelFor(model => model.Name, Model.Name )
            </p>
            
           

            <p>
                Знайти ментора
                @Html.TextBoxFor(m => m.TextSearhAssistants, new { @placeholder = "Знайти ментора" })
            </p>
            @*<div>


                    <p>
                        @Html.ListBoxFor(model => model.SelectedTeg, Model.TegList, new { size = 5 })
                    </p>
                </p>
            </div>*@<div>

                <p>
                    @Html.LabelFor(model => model.MyTegs, Model.MyTegs)
                </p>
            </div>
            @Html.LabelFor(model => model.About_me, Model.About_me)

        </fieldset>
    }
</div>


